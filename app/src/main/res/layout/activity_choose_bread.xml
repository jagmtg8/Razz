<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="github2b2b.razz.ChooseBread"
    android:clickable="false">


    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Quit"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:id="@+id/button4"
        android:onClick="exitToStart"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ToggleButton
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:text="Sub Roll"
                    android:id="@+id/btnSub"
                    android:padding="25dp"
                    android:textSize="15dp"
                    android:onClick="breadClick"
                    android:checked="false"
                    android:textOff="Sub Roll - $7.50"
                    android:textOn="Sub Roll - $7.50"
                    android:tag="0"
                    />

                <ToggleButton
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:text="Deli Roll"
                    android:id="@+id/btnRoll"
                    android:layout_column="1"
                    android:padding="25dp"
                    android:textSize="15dp"
                    android:onClick="breadClick"
                    android:checked="false"
                    android:textOff="Deli Roll - $7.00"
                    android:textOn="Deli Roll - $7.00"
                    android:tag="1"/>

                <ToggleButton
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:text="White Bread"
                    android:id="@+id/btnWhiteBread"
                    android:layout_column="2"
                    android:padding="0dp"
                    android:textSize="15dp"
                    android:onClick="breadClick"
                    android:checked="false"
                    android:textOff="White Bread - $6.50"
                    android:textOn="White Bread - $6.50"
                    android:tag="2"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ToggleButton
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:text="Wheat Bread"
                    android:id="@+id/btnWheatBread"
                    android:padding="0dp"
                    android:textSize="15dp"
                    android:onClick="breadClick"
                    android:checked="false"
                    android:textOff="Wheat Bread - $6.50"
                    android:textOn="Wheat Bread - $6.50"
                    android:tag="3"/>

                <ToggleButton
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:text="Wrap"
                    android:id="@+id/btnWrap"
                    android:layout_column="1"
                    android:padding="25dp"
                    android:textSize="15dp"
                    android:onClick="breadClick"
                    android:checked="false"
                    android:textOff="Wrap  - $7.50"
                    android:textOn="Wrap  - $7.50"
                    android:tag="4"/>

                <ToggleButton
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:text="Wheat Wrap"
                    android:id="@+id/btnWheatWrap"
                    android:layout_column="2"
                    android:padding="0dp"
                    android:textSize="15dp"
                    android:onClick="breadClick"
                    android:checked="false"
                    android:textOff="Wheat Wrap - $8.50"
                    android:textOn="Wheat Wrap - $8.50"
                    android:tag="5"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>

        </TableLayout>
    </ScrollView>


</RelativeLayout>

